@{
    Layout = "_Layout";
}

@using Bakery.Models;


<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No Treats have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Type}", "Details", new { id = treat.TreatId }) ID# @treat.TreatId</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>