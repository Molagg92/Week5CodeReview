@{
    Layout = "_Layout";
}

@using Bakery.Models;


<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Frosting}", "Details", new { id = flavor.FlavorId }) ID# @flavor.FlavorId</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>